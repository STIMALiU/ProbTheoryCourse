\begin_inset Formula 
\[
f_{Y}(y)=\frac{1}{\sqrt{2\pi}\sigma}\exp\left(-\frac{1}{2\sigma^{2}}\left(\ln y-\mu\right)^{2}\right)\cdot\frac{1}{y}\text{ for }y>0.
\]

\end_inset


\end_layout

\begin_layout Itemize
